generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== Core Models ==========

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  image     String?
  role      Role      @default(USER)
  password  String?
  emailVerified DateTime?
  accounts  Account[]
  sessions  Session[]
  posts     Post[]
  comments  Comment[]
  quizzes   Quiz[]
  roadmaps  Roadmap[]
  reviews   Review[]
  auditLogs AuditLog[] @relation("UserAuditLogs")
  crosswordGames CrosswordGame[]
  createdAt DateTime  @default(now())
}

enum Role {
  USER
  MOD
  ADMIN
}

model Post {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  content     String
  coverUrl    String?
  status      PostStatus  @default(DRAFT)
  author      User        @relation(fields: [authorId], references: [id])
  authorId    String
  tags        TagOnPost[]
  comments    Comment[]
  views       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?
  auditLogs   AuditLog[]
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
  REJECTED
}

model Tag {
  id    String     @id @default(cuid())
  name  String     @unique
  posts TagOnPost[]
}

model TagOnPost {
  post   Post   @relation(fields: [postId], references: [id])
  postId String
  tag    Tag    @relation(fields: [tagId], references: [id])
  tagId  String

  @@id([postId, tagId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  createdAt DateTime @default(now())
}

model Quiz {
  id        String     @id @default(cuid())
  title     String
  author    User       @relation(fields: [authorId], references: [id])
  authorId  String
  questions Question[]
  isPublic  Boolean    @default(false)
  createdAt DateTime   @default(now())
}

model Question {
  id      String @id @default(cuid())
  quiz    Quiz   @relation(fields: [quizId], references: [id])
  quizId  String
  prompt  String
  options Json   // ["A","B","C","D"]
  answer  Int    // correct index
}

model TimelineEvent {
  id        String   @id @default(cuid())
  year      Int
  title     String
  summary   String
  sourceUrl String?
  order     Int      @default(0)
}

model AuditLog {
  id        String   @id @default(cuid())
  actor     User     @relation("UserAuditLogs", fields: [actorId], references: [id])
  actorId   String
  action    String   // "APPROVE_POST" | "REJECT_POST" | ...
  targetId  String?
  meta      Json?
  createdAt DateTime @default(now())

  // optional link to a specific post for audit trail
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
}

// ========== Auth (NextAuth) ==========

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========== New: Roadmap Storage ==========

model Roadmap {
  id          String         @id @default(cuid())
  user        User           @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String?
  items       RoadmapItem[]
  isPublic    Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userId])
}

model RoadmapItem {
  id          String   @id @default(cuid())
  roadmap     Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  roadmapId   String
  order       Int
  title       String
  description String?
  links       Json?
  completed   Boolean  @default(false)

  @@index([roadmapId])
  @@unique([roadmapId, order])
}

// ========== New: Site Reviews ==========

model Review {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  rating    Int      // 1..5
  title     String?
  content   String
  createdAt DateTime @default(now())

  @@index([userId])
}

// ========== New: Crossword Games ==========

model CrosswordGame {
  id          String            @id @default(cuid())
  title       String
  description String?
  keyword     String            // Keyword dọc (VD: "CÔNGNHÂNXÃHỘI")
  theme      String?           // Chủ đề (VD: "CHỦ NGHĨA XÃ HỘI KHOA HỌC")
  isPublic    Boolean           @default(false)
  questions   CrosswordQuestion[]
  createdBy   User              @relation(fields: [createdById], references: [id])
  createdById String            @default("cmgs1ags6000017wrlybf5q42")
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  @@index([createdById])
  @@index([isPublic])
}

model CrosswordQuestion {
  id              String         @id @default(cuid())
  game            CrosswordGame  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId          String
  order           Int            // Thứ tự câu hỏi (1-10)
  question        String         // Câu hỏi gợi ý
  answer          String         // Đáp án đúng
  explanation     String?        // Giải thích
  keywordCharIndex Int           @default(0) // Vị trí chữ cái trong answer tạo keyword (0-based)
  keywordColumn   Int            @default(5) // Cột cố định cho keyword (0-based)
  
  @@index([gameId])
  @@unique([gameId, order])
}


